{
	"name": "johnbillion/wp-crontrol",
	"description": "WP Crontrol lets you view and control what's happening in the WP-Cron system.",
	"homepage": "https://github.com/johnbillion/wp-crontrol/",
	"license": "GPL-2.0-or-later",
	"type": "wordpress-plugin",
	"authors": [
		{
			"name": "John Blackbourn",
			"homepage": "https://johnblackbourn.com/"
		},
		{
			"name": "Edward Dale",
			"homepage": "http://scompt.com/"
		}
	],
	"config": {
		"sort-packages": true,
		"preferred-install": "dist"
	},
	"require-dev": {
		"codeception/module-asserts": "^1.0",
		"codeception/module-filesystem": "^1.0",
		"codeception/module-phpbrowser": "^1.0",
		"codeception/module-webdriver": "^1.0",
		"codeception/util-universalframework": "^1.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
		"lucatume/wp-browser": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "2.1.2",
		"phpstan/phpstan": "^1.0",
		"szepeviktor/phpstan-wordpress": "^1.0",
		"wp-cli/core-command": "^2",
		"wp-cli/db-command": "^2",
		"wp-coding-standards/wpcs": "2.3.0"
	},
	"require": {
		"php": ">=5.3.6",
		"composer/installers": "^1.0 || ^2.0"
	},
	"scripts": {
		"post-update-cmd": [
			"@php -r \"! file_exists( 'tests/.env' ) && copy( 'tests/.env.dist', 'tests/.env' );\""
		],
		"test:cs": [
			"phpcs -nps --colors --report-code --report-summary --report-width=80 --cache=tests/cache/phpcs ."
		],
		"test:cs2pr": [
			"phpcs -nsq --report=checkstyle --cache=tests/cache/phpcs . | cs2pr"
		],
		"test:analyze": [
			"vendor/bin/phpstan analyze"
		],
		"test:ft": [
			"docker-compose up",
			"bin/test.sh",
			"docker-compose down"
		],
		"test": [
			"@test:cs",
			"@test:analyze",
			"@test:ft"
		]
	}
}
